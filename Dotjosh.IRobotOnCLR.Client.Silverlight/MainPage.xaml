<UserControl x:Class="Dotjosh.IRobotOnCLR.Client.Silverlight.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="500" 
    d:DesignWidth="800">

    <Grid x:Name="LayoutRoot">
    	<Grid.Background>
    		<LinearGradientBrush EndPoint="0.495,0.93" StartPoint="0.495,0.094">
    			<GradientStop Color="#FF30333B" Offset="1"/>
    			<GradientStop Color="#FF16181D"/>
    		</LinearGradientBrush>
    	</Grid.Background>
        <Grid.RowDefinitions>
            <RowDefinition Height="354*" />
            <RowDefinition Height="146*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="57*" />
            <ColumnDefinition Width="283*" />
            <ColumnDefinition Width="60*" />
        </Grid.ColumnDefinitions>
        <Rectangle Fill="{Binding SensorStatus.BumpLeft,Converter={StaticResource BumpToColorConverter}}" 
                   Grid.RowSpan="2"
                   />
        <Rectangle Fill="{Binding SensorStatus.BumpRight,Converter={StaticResource BumpToColorConverter}}"
                   Grid.Column="2"
                   Grid.RowSpan="2" />
    </Grid>
</UserControl>
